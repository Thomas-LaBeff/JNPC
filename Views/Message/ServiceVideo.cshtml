@model IEnumerable<Church_App.Models.MessageModel>

@{
    ViewBag.Title = "JNPC Service Videos";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<head>
    <meta name="keywords" content="McLoud, Pentecost, Church, Jesus" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    @Styles.Render("~/Style/css")
    @Styles.Render("~/Content/css")
    <link href="~/Style/HomeStyleSheet.css" rel="stylesheet" />
</head>

<h2 class="heading3">Service Videos</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ServiceDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MessageTopic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MessageTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Video)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MessageTopic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MessageTitle)
            </td>

            <td>
                <a href="@Html.DisplayFor(modelItem => item.Video)" target="_blank">
                    @Html.DisplayFor(modelItem => item.Video)
                </a>
            </td>
        </tr>
    }
</table>
<div class="body"></div>
