@model Church_App.Models.UserModel

@{
    ViewBag.Title = "MemberLogin";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<head>
    <meta name="keywords" content="McLoud, Pentecost, Church, Jesus" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    @Styles.Render("~/Style/css")
    @Styles.Render("~/Content/css")
    <link href="~/Style/HomeStyleSheet.css" rel="stylesheet" />
</head>

<h2 style="font-family: helvetica;">Member Login</h2>

@using (Html.BeginForm("MemberLogin", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="font-family: helvetica;">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="text-align:left; font-family: helvetica;">
                @Html.TextBoxFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="text-align: left; font-family: helvetica;">
                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div style="font-family: Helvetica;">

    @Html.ActionLink("Back to Login", "MemberLogin")
</div>

